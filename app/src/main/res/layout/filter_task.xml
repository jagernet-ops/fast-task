<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Filter Tasks"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:id="@+id/filterTask"/>
    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filterTask"
        android:inputType="text"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/filterAutoComplete"
        android:paddingBottom="20dp"
        android:hint="Enter Category Filter"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/filterAutoComplete"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:theme="@style/Button.Black"
            android:text="Filter Color"
            android:id="@+id/filterColor"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:theme="@style/Button.Black"
            android:id="@+id/filterExpiry"
            android:text="Filter Expiry"
            />
    </LinearLayout>
</RelativeLayout>